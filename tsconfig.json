{
  "include": [
    "eslint.config.ts",
    "tsdown.config.ts",
    "commitlint.config.ts",
    "packages/**/*",
    "scripts/**/*",
    "test/**/*"
  ],
  "exclude": ["dist"],
  "compilerOptions": {
    "rootDir": ".",
    "baseUrl": ".",
    "outDir": "dist",
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "bundler",
    "downlevelIteration": true,
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["node"],
    "allowImportingTsExtensions": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "noEmit": true,
    "paths": {
      "@yetim/components": ["packages/components"],
      "@yetim/config": ["packages/config"],
      "@yetim/lib": ["packages/lib"],
      "@yetim/scaffold": ["packages/scaffold"],
      "@yetim/scripts": ["scripts"],
      "@yetim/utils": ["packages/utils"],
      "@/*": ["./test/*"]
    },
    "preserveSymlinks": true
  }
}
